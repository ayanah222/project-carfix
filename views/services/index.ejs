<h2 class="page-header">Search Services</h2>
<form action="/services" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Serviced After</label>
            <input type="date" name="serviceAfter" value="<%= searchOptions.serviceAfter %>">
        </div>
        <div class="form-item">
            <label>Serviced Before</label>
            <input type="date" name="serviceBefore" value="<%= searchOptions.serviceBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<div>
    <% services.forEach(service => { %>
    <div>
        <%= service.serviceCar.licensePlate %>
        <%= '-' %>
        <%= service.serviceCar.carOwner %>
        <%= '-' %>
        <%= service.serviceCar.carMake %>
        <%= '-' %>
        <%= service.serviceCar.carType %>
        <%= '-' %>
        <%= service.serviceDate.toISOString().split('T')[0] %>
        <%= '-' %>
        <%= service.serviceOdometer %>
        <%= 'Km' %>
    </div>
    <div class="btn-row"> 
    <a class="btn btn-primary" href="/services/<%= service.id %>">View</a>
    <a class="btn btn-primary" href="/services/<%= service.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', 
            { url: `/services/${service.id}` }) %>
    </div>
<% }) %>