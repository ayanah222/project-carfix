<h2 class="page-header">Search Cars</h2>
<form action="/cars" method="GET">
<div class="form-row">
    <div class="form-item">
        <label>License plate</label>
        <input type="text" name="licensePlate" value="<%= searchOptions.licensePlate %>">
    </div>
    <div class="form-item">
        <label>Car Owner</label>
        <input type="text" name="carOwner" value="<%= searchOptions.carOwner %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Car Make</label>
        <input type="text" name="carMake" value="<%= searchOptions.carMake %>">
    </div>
    <div class="form-item">
        <label>Car Type</label>
        <input type="text" name="carType" value="<%= searchOptions.carType %>">
    </div>
</div>
<div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
</div>
</form>
<br>
<% cars.forEach(car => { %>
<div>
    <h3><%= car.licensePlate %>
    <%= '-' %>
    <%= car.carOwner %>
    <%= '-' %>
    <%= car.carMake %>
    <%= '-' %>
    <%= car.carType %></h3>
</div>
<div class="btn-row">
    <a class="btn btn-primary" href="/cars/<%= car.id %>">View</a>
    <a class="btn btn-primary" href="/cars/<%= car.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', 
                { url: `/cars/${car.id}` }) %>
</div>
<% }) %>